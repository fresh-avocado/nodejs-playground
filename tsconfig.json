{
  "compilerOptions": {
    "module": "commonjs",
    // esModuleInterop allows us to compile ES6 modules to commonjs modules
    "esModuleInterop": true,
    // allows us to specify the target JavaScript version that compiler will output
    "target": "es6",
    "noImplicitAny": true,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    // outDir: specifies where to output JavaScript code after build.
    "outDir": "dist",
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true
    // "paths": {
    //   "@routes/*": ["./src/routes/*"],
    //   "@controllers/*": ["./src/controllers/*"],
    //   "@middleware/*": ["./src/middleware/*"],
    //   "@models/*": ["./src/models/*"]
    // }
  },
  "include": ["./src", "babel.config.js"]
}
